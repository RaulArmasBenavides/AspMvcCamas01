
@{
    ViewBag.Title = "Index";
}

<h2>Listado Personas</h2>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary"
        onclick="Editar(0)"
        
        data-bs-toggle="modal" data-bs-target="#staticBackdrop">
    Nuevo
</button>

<div class="input-group mb-3 mt-3">
    <select onchange="filtrarPersonaTipousuario()" class="form-control" id="cboTipoUsuario">
    </select>

</div>

<div id="divTabla">

</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <!--modal-lg -->
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="frmPersona" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="mt-3 mb-3 col-md-6">
                            <label>Id persona</label>
                            <input readonly type="text" name="iidpersona" class="form-control" />
                        </div>
                        <div class="mt-3 mb-3 col-md-6">
                            <label>Nombre</label>
                            <input type="text" name="nombre" class="form-control o" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="mt-3 mb-3 col-md-6">
                            <label>Apellido Paterno</label>
                            <input type="text" name="apellidopaterno" class="form-control o" />
                        </div>
                        <div class="mt-3 mb-3 col-md-6">
                            <label>Apellido materno</label>
                            <input type="text" name="apellidomaterno" class="form-control o" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="mt-3 mb-3 col-md-6">
                            <label>Telefono Fijo</label>
                            <input type="text"
                                   onkeypress="validarSoloNumeros(event)"
                                   name="telefono" class="form-control snc o" />
                        </div>
                        <div class="mt-3 mb-3 col-md-6">
                            <label>Tipo Usuario</label>
                            <select name="iidtipousuario" class="form-control o"
                                    id="cboTipousuarioForm"></select>
                        </div>
                    </div>
                    <div class="row">
                        <div class=" mt-3 mb-3 col-md-6 o-1">
                            <input type="radio" id="rbMas"
                                    name="iidsexo" value="1" /> <label>Masculino</label>
                            <input type="radio" id="rbFem"
                                   name="iidsexo" value="2" /> <label>Femenino</label>
                        </div>
                        <div class=" mt-3 mb-3 col-md-6">
                            <div>Foto</div>
                            <img width="100" height="100" id="imgFoto" name="fotobase64" />
                            <input accept=".jpg;.png" type="file" id="fupFoto" name="fotopersona" />
                        </div>


                    </div>
					<div class="row">
						<div class="o-2 col-md-6">
							<p>Elija los gustos que tiene:</p>
							<input type="checkbox" name="valor[]" value="1" /> <label>Jugar</label>
							<input type="checkbox" name="valor[]" value="2" /> <label>Correr</label>
							<input type="checkbox" name="valor[]" value="3" /> <label>Comer</label>
						</div>

						

					</div>

					<div class="row">
						<div class=" col-md-6">
							<p>Nombre Usuario:</p>
							<input type="text"
								   name="nombreusuario" class="form-control  o" />
						</div>
                        <div class=" col-md-6" id="divcontra">
							<p>Contraseña:</p>
							<input type="password"
								   name="contra" class="form-control  o" />
						</div>
					</div>
                  



                </form>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary"
                        id="btnCerrar"
                        data-bs-dismiss="modal">Cerrar</button>
                <button type="button"
                        onclick="Guardar()"
                        class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/sweetalert.js"></script>
<script src="~/Scripts/generic.js"></script>
<script src="~/Scripts/persona.js"></script>

